<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/usernamelogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:hint="@string/hint_username_login"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:background="@drawable/edittext" />

    <FrameLayout
        android:id="@+id/passwordframe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/pswlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_passwordlog"
            android:imeActionLabel="@string/action_sign_in_shortlog"
            android:imeOptions="actionDone"
            android:background="@drawable/edittext"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:paddingEnd="48dp" />

        <ImageView
            android:id="@+id/mostraPassword"
            android:layout_width="40sp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:padding="8dp"
            android:src="@drawable/passwordicon"
            android:contentDescription="@string/descr_mostra_passwordlog"
            android:layout_marginEnd="12dp"/>
    </FrameLayout>

    <Button
        android:id="@+id/loginconmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20sp"
        android:enabled="true"
        android:text="@string/button_accedi"
        style="@style/GreenButton" />

    <TextView
        android:id="@+id/iniziaresetpsw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_password_dimenticata"
        android:textSize="15sp"
        android:clickable="true"
        android:layout_marginTop="10sp" />
</LinearLayout>



