<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/maillogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <FrameLayout
        android:id="@+id/passwordframe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/maillogin"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/pswlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_password"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:paddingEnd="48dp" />

        <ImageView
            android:id="@+id/mostraPassword"
            android:layout_width="40sp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:padding="8dp"
            android:src="@drawable/passwordicon"
            android:contentDescription="Mostra Password"
            android:layout_marginEnd="12dp"/>
    </FrameLayout>

    <Button
        android:id="@+id/loginconmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="64dp"
        android:enabled="true"
        android:text="Accedi con email"
        android:layout_centerHorizontal="true"
        style="@style/GreenButton"
        android:layout_below="@id/passwordframe"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="oppure"
        android:layout_below="@+id/loginconmail"
        android:layout_centerHorizontal="true"
        android:id="@+id/testodellopzione"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtextphonenumber"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:layout_below="@+id/testodellopzione"
        android:layout_marginTop="30sp"
        android:selectAllOnFocus="true"
        android:hint="Inserisci numero di telefono"/>

    <EditText
        android:id="@+id/codeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtextphonenumber"
        android:hint="Inserisci il codice di verifica"
        android:visibility="gone"/> <!-- Lo mostrerai solo dopo aver inviato il codice -->

    <Button
        android:id="@+id/sendCodeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codeEditText"
        style="@style/GreenButton"
        android:text="Invia codice di verifica" />

    <Button
        android:id="@+id/verifyCodeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verifica codice"
        style="@style/GreenButton"
        android:layout_below="@+id/sendCodeButton"
        android:visibility="gone"/> <!-- Anche questo diventerÃ  visibile dopo l'invio del codice -->








</RelativeLayout>
