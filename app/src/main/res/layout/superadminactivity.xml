<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/emailsuperadmin"
            android:layout_width="match_parent"
            android:background="@drawable/edittext"
            android:layout_height="wrap_content"
            android:hint="@string/hint_email_superadmin"
            android:layout_marginBottom="16sp"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/usernamesuperadmin"
            android:layout_width="match_parent"
            android:background="@drawable/edittext"
            android:layout_height="wrap_content"
            android:hint="@string/hint_username_superadmin"
            android:layout_marginBottom="16sp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/passwordsuperadmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:hint="@string/hint_password_superadmin"
            android:layout_marginBottom="16sp"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/confermapasswordsuperadmin"
            android:layout_width="match_parent"
            android:background="@drawable/edittext"
            android:layout_height="wrap_content"
            android:hint="@string/hint_conferma_password_superadmin"
            android:layout_marginBottom="16sp"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/registerbuttonsuperadmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            style="@style/GreenButton"
            android:text="@string/button_crea_admin"/>

        <Button
            android:id="@+id/logoutsuperadmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            style="@style/GreenButton"
            android:text="@string/button_logout_superadmin"/>

        <EditText
            android:id="@+id/questionEditText"
            android:layout_width="match_parent"
            android:background="@drawable/edittext"
            android:layout_marginBottom="16sp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_inserisci_domanda_superadmin"/>

        <EditText
            android:id="@+id/answerEditText"
            android:layout_width="match_parent"
            android:background="@drawable/edittext"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:hint="@string/hint_inserisci_risposta_superadmin"/>

        <Button
            android:id="@+id/addFaqButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GreenButton"
            android:text="@string/button_aggiungi_faq"/>

        <View
            android:id="@+id/divisoresintomi"
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:layout_below="@id/answerTextView"
            android:background="#4CAF50"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/faqRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>


